                <div id="carousel" class="glide carousel-home">
                    <div class="glide__track" data-glide-el="track">
                        <ul class="glide__slides">
                            {% for item in featured_case_study %}
                                <li class="glide__slide item {{'active' if loop.first}}">
                                    <div class="home-carousel-item">
                                        <div class="home-carousel-text">
                                            <strong class="caption-title">Featured Project</strong>
                                            <h3>{{ item.title}}</h3>
                                            <p class="summary">{{ item.summary}}</p>
                                            <a href="/{{item.path}}/" class="btn btn-secondary" aria-label="case study about {{item.tilte}}">Read Case Study</a>
                                        </div>
                                        <div class="home-carousel-img-container">
                                            <a href="/{{item.path}}/">
                                                <picture>
                                                    <source type="image/webp" srcset="{{item.overviewimg | replace('.jpg','.webp') | replace('/img/case-studies/','/img/resized/case-studies/')}}">
                                                    <img src="{{item.overviewimg }}" loading="lazy" width="629" height="379" class="img-responsive center" alt="{{ item.overviewimg_alt | e | default("")}}"/>
                                                </picture>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="carousel-controls">

                        <div class="glide__arrows" data-glide-el="controls">
                            <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
                            <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
                        </div>
                        <div class="glide__bullets" data-glide-el="controls[nav]">
                            {% for item in featured_case_study %}
                                <button class="glide__bullet" data-glide-dir="={{loop.index0}}"></button>
                            {% endfor %}
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container-fluid">
            <div class="text-center-sm">
                <div class="subhead">How We Work</div>
                <h2>Needs Based Marketing</h2>
                <p>Three ways we engage based on your marketing needs:</p><br>
            </div>
            <div class="ways-to-engage">
                {% for item in ways_to_engage %}
                    <div class="wte-num wte-num-{{loop.index}}">{{loop.index}}</div>
                    <div class="wte">
                        <img src="{{item.img}}" width="64" height="64" loading="lazy" alt="icon item.title">
                        <br>
                        <strong class="content-title">{{ item.title}}</strong>
                        <p>{{ item.content}}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <script>
        window.addEventListener('load',(e) => {
            new Glide('.glide').mount();
        })
    </script>
{% endblock %}