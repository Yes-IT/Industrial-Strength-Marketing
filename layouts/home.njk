{% block body %}
    <a name="start"></a>
    <div class="bg-light pillar-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-sm-offset-2">
                <a href="https://ism.industrialstrengthmarketing.com/en-us/industrial-trade-show-marketing-playbook" target="_new"><img src="/img/Industrial_Trade_Show_Playbook_268.png" alt="INDUSTRIAL Tradeshow Marketing Playbook" class="img-responsive"></a>
            </div>
            <div class="col-sm-5 ">
                    <div class="subhead">New From Industrial</div>
                    <h2>The Industrial Trade Show Marketing Playbook</h2>
                    <p>Get more trade show value before, during, and after your next manufacturing live event.</p>
                    <a href="https://ism.industrialstrengthmarketing.com/en-us/industrial-trade-show-marketing-playbook" target="_new" class="btn btn-default">Download the Playbook</a>
            </div>
        </div>
    </div>
</div>
    <div class="section">
        <div class="container-fluid">
            <div class="text-center-sm">
                <div class="subhead">Who We Are</div>
                <h2>Unapologetically Industrial.</h2>
                <p class="">
                We are a full-service marketing agency that brands, modernizes and <br class="hidden-xs">grows companies in the following industrial sectors:
            </p>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="cards-container">
            {% for client in clients %}
                <div class="card">
                    <a href="{{client.url}}">
                         {{ client.img | responsiveImage({alt: "client type picture", width:408, height:418, cssClass:"img-full"})}}
                    </a>
                    <div class="card-content-container">
                        <strong class="card-title">{{client.title}}</strong>
                        <p class="card-copy">{{client.content}}</p>
                        <a href="{{client.url}}" class="link-learn-more" aria-label="more about {{client.title}}" title="more about {{client.title}}">See More</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="section">
        <div class="">
            <div class="text-center">
                <div class="subhead">What we provide</div>
                <h2>Featured Services</h2>
            </div>
            <div class="services">
                {% for service in services %}
                    <div class="service">
                        <a href="{{service.url}}">
                            <div class="img-container">
                                <img class="icon" src="{{service.icon}}" width="64" height="64" loading="lazy" alt="{{service.title}}">
                            </div>
                        </a>
                        <div class="service-content">
                            <strong class="upper content-title">
                                <a href="{{service.url}}">{{service.title}}</a>
                            </strong>
                            <p>{{service.content}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center"><br><br>
                <a href="/services/" class="btn btn-secondary" aria-label="See All Marketing Services" title="See All Marketing Services">See More</a>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container-fluid">
            <div class="carousel-container">
                {# <div id="carousel" class="carousel carousel-home slide" data-ride="carousel" data-interval="10000" >
                    <div class="carousel-inner">
                        {% for item in featured_case_study %}
