{% set canonical = (siteConfig.siteUrl + '/' + path + '/') %}
{%- if  seo and  seo.canonical -%}
{%- set canonical = seo.canonical  -%}
{%- endif -%}
{% set canonical = canonical | cleanUrl %}
<link rel="canonical" href="{{ canonical }}">
<meta name="description" content="{{ seo.description if seo.description else 'Industrial Strength Marketing - B2B marketing for industrials' }}">
<meta property="og:locale" content="en_US" />
<meta property="og:type" content="article" />
<meta property="og:title" content="{{title}}" />
<meta property="og:description" content="{{seo.description}}" />
<meta property="og:url" content="{{ canonical }}" />
<meta property="og:site_name" content="{{siteConfig.siteName}}" />

<meta name="twitter:card" content="summary"></meta>
<meta name="twitter:site" content="@IndustrialSays"/>
{%- set ogImg = siteConfig.siteUrl + '/img/heros/general-hero.jpg' -%}
{%- if open_graph_img -%}
{%- set  ogImg =  siteConfig.siteUrl + open_graph_img -%}
{%- elif path === 'insights/podcast'  -%}
{%- set  ogImg =  siteConfig.siteUrl + "/img/ISM_Podcast_Artwork_Image.jpg"  -%}
{% elif jumbotron.img %}
{%- set  ogImg =  siteConfig.siteUrl +  jumbotron.img  -%}
{% endif%}
<meta property="og:image" content="{{ ogImg }}">
<meta name="twitter:image" content="{{ ogImg }}">
{% if private or seo.noindex %}<meta name="robots" content="noindex, nofollow">{% endif%}
