            margin-bottom: 24px;
        }

        .form-intro {
            margin: 0 0 16px;
        }

        .hs-form-field {
            padding: 0 0 16px;
        }

        .validation-msg.active {
            display: block;
        }

        .mw {
            max-width: 390px;
        }

        .validation-msg {
            padding: 8px;
            background-color: rgba(226, 167, 112, 0.733);
            color: #700;
            display: none;
            margin: 10px 0;
        }

        .form-container {
            padding: 20px;
        }

        .options {
            padding: 16px 0;
        }

        .option-container {
            display: block;
            position: relative;
            padding-left: 35px;
            margin-bottom: 12px;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        /* Hide the browser's default checkbox */
        .option-container input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }

        .checkmark {
            position: absolute;
            top: 0;
            left: 0;
            height: 20px;
            width: 20px;
            background-color: #eee;
        }

        .option-container:hover input~.checkmark {
            background-color: #ccc;
        }

        /* Create the checkmark/indicator (hidden when not checked) */
        .checkmark:after {
            content: "";
            position: absolute;
            display: none;
        }

        /* Show the checkmark when checked */
        .option-container input:checked~.checkmark:after {
            display: block;
        }

        /* Style the checkmark/indicator */
        .option-container .checkmark:after {
            left: 6px;
            top: 1px;
            width: 8px;
            height: 16px;
            border: solid rgb(155, 13, 13);
            border-width: 0 2px 2px 0;
            -webkit-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            transform: rotate(45deg);
        }

        .lp-2012024-content {
            padding-top: 100px;
        }

        @media screen and (min-width:800px) {
            #header .header-logo svg {
                width: 170px !important;
            }

            .lp-2012024-content-container {
                line-height: 1.5;
                padding-bottom: 132px;
            }

            .lp-2012024-jumbo-title {
                font-size: 110px;
                max-width: 520px;
                margin-bottom: 18px;
                letter-spacing: 0;
                line-height: .9;
            }

            #form {
                margin-top: 200px;
            }

            .options {
                padding-top: 18px;
            }
        }
    </style>
    <script>
        var hsField, somethingElseField, trendOptions, msg;
        var hsOnFormSubmitted = function ($form) {
            document.getElementById('supplemental-form-elements').classList.add('hidden');
            document.getElementById('form-intro').classList.add('hidden');
        }
        var assembleOptionsData = function () {
            var data = [];
            hsField = document.querySelector('input[name="industrial_trend_interest"]');
            trendOptions.forEach(function (el) {
                if (el.checked) {
                    data.push(el.value);
                }
            });
            if (somethingElseField.value) {
                data.push(somethingElseField.value);
            }
            if (hsField) {
                hsField.value = data.join(', ');
            }

        }
        var isValid = function isValid() {
            var valid = trendOptions.some(function (el) {
                return el.checked;
            });

            if (!valid && somethingElseField.value) {
                valid = true;
            }

            return valid;
        }
        document.addEventListener('DOMContentLoaded', function () {

            somethingElseField = document.getElementById('something-else');
            trendOptions = Array.from(document.querySelectorAll('[option-checkbox]'));
            msg = document.getElementById('msg');

            document.getElementById('submit-btn').addEventListener('click', function () {
                var valid = isValid();

                if (valid) {
                    var form = document.querySelector('#form form');
                    assembleOptionsData();
                    form.submit();
                }
                msg.classList.toggle('active', !valid);
            });
        });
    </script>
</head>
